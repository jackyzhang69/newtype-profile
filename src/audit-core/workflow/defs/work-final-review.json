{
  "workflow_id": "work_final_review",
  "name": "Work Permit Final Review",
  "description": "Final pre-submission review for work permit applications with Judge verdict",
  "app_type": "work",
  "version": "1.0.0",
  "stages": [
    {
      "id": "intake",
      "agent": "intake",
      "description": "Extract finalized application documents",
      "required": true,
      "depends_on": [],
      "retry_limit": 2,
      "timeout_seconds": 300
    },
    {
      "id": "strategist",
      "agent": "strategist",
      "description": "Final risk and strategy assessment",
      "required": true,
      "depends_on": ["intake"],
      "retry_limit": 2,
      "timeout_seconds": 600
    },
    {
      "id": "gatekeeper",
      "agent": "gatekeeper",
      "description": "Final compliance validation before submission",
      "required": true,
      "depends_on": ["strategist"],
      "retry_limit": 2,
      "timeout_seconds": 300
    },
    {
      "id": "verifier",
      "agent": "verifier",
      "description": "Verify all citations and case law",
      "required": false,
      "depends_on": ["gatekeeper"],
      "retry_limit": 3,
      "timeout_seconds": 300,
      "tier_availability": ["pro", "ultra"]
    },
    {
      "id": "judge",
      "agent": "judge",
      "description": "Final verdict on submission readiness (GO/CAUTION/NO-GO)",
      "required": true,
      "depends_on": ["verifier"],
      "retry_limit": 1,
      "timeout_seconds": 300,
      "only_in": ["final_review", "risk_audit", "initial_assessment", "refusal_analysis"]
    },
    {
      "id": "reporter",
      "agent": "reporter",
      "description": "Generate final review report with submission letter template",
      "required": true,
      "depends_on": ["judge"],
      "retry_limit": 1,
      "timeout_seconds": 300
    }
  ],
  "metadata": {
    "created": "2026-01-27",
    "audit_tier_compatibility": ["guest", "pro", "ultra"],
    "estimated_duration_minutes": 50,
    "description_full": "6-stage workflow for final pre-submission review. Includes full risk assessment, compliance validation, citation verification, Judge verdict, and submission readiness report."
  }
}
