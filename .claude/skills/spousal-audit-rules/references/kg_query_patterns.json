{
  "version": "2.0",
  "description": "Knowledge Graph 查询模式，用于获取与风险模式相关的具体案例",
  "_policy": {
    "description": "查询模式管理策略",
    "note": "expected_results 仅展示查询示例，实际案例由 MCP 动态返回",
    "fc_authorities": "经 KG 验证的 FC 权威案例：2012 FC 1522 (Kaur Gill), 2016 FC 1207 (Nguyen), 2019 FC 374 (Fung)",
    "last_verified": "2026-01-25"
  },
  "query_patterns": {
    "by_issue_code": {
      "description": "按问题代码查询相关案例 - 使用 kg_top_authorities 或 caselaw_optimized_search",
      "recommended_tool": "kg_top_authorities(issue_code='SUB_FAMILY_GENUINENESS', court='FC', limit=10)",
      "examples": [
        {
          "pattern": "issue_code:SUB_FAMILY_GENUINENESS",
          "use_case": "查找关系真实性相关案例",
          "mcp_call": "kg_top_authorities(issue_code='SUB_FAMILY_GENUINENESS', court='FC', limit=5)"
        },
        {
          "pattern": "issue_code:SUB_MISREP_S40",
          "use_case": "查找虚假陈述案例",
          "mcp_call": "kg_top_authorities(issue_code='SUB_MISREP_S40', court='FC', limit=5)"
        },
        {
          "pattern": "query:credibility spousal sponsorship",
          "use_case": "查找可信度问题案例",
          "mcp_call": "caselaw_optimized_search(query='credibility spousal sponsorship', court='fc', target_count=5)"
        },
        {
          "pattern": "query:IRPR 4(1)(a) immigration purpose",
          "use_case": "查找移民目的不纯案例",
          "mcp_call": "caselaw_keyword_search(query='IRPR 4(1)(a) primarily for immigration', court='fc', top_k=5)",
          "fc_authority": "Kaur Gill v Canada, 2012 FC 1522 - 确立 IRPR 4(1) 双重测试"
        },
        {
          "pattern": "query:lack cohabitation evidence",
          "use_case": "查找缺乏共同生活证据案例",
          "mcp_call": "caselaw_optimized_search(query='lack cohabitation evidence spousal', court='fc', target_count=5)"
        }
      ]
    },
    "by_outcome": {
      "description": "按裁决结果查询",
      "examples": [
        {
          "pattern": "outcome:dismissed",
          "use_case": "查找上诉被驳回的案例"
        },
        {
          "pattern": "outcome:allowed",
          "use_case": "查找上诉成功的案例"
        }
      ]
    },
    "by_country": {
      "description": "按申请人国籍查询",
      "examples": [
        {
          "pattern": "country:IND",
          "use_case": "查找印度申请人案例"
        },
        {
          "pattern": "country:CHN",
          "use_case": "查找中国申请人案例"
        },
        {
          "pattern": "country:PAK",
          "use_case": "查找巴基斯坦申请人案例"
        }
      ]
    },
    "by_citation": {
      "description": "按案例引用查询具体案例 - 使用 caselaw_authority 验证权威性",
      "examples": [
        {
          "pattern": "citation:2012 FC 1522",
          "use_case": "查找 Kaur Gill v Canada 案例详情并验证权威性",
          "mcp_call": "caselaw_authority(citation='2012 FC 1522')",
          "verified": {"cited_by": 1, "is_good_law": true}
        },
        {
          "pattern": "citation:2016 FC 1207",
          "use_case": "查找 Nguyen v Canada 案例详情",
          "mcp_call": "caselaw_authority(citation='2016 FC 1207')",
          "verified": {"cited_by": 2, "is_good_law": true}
        }
      ],
      "_note": "仅保留经 KG 验证的 FC 权威案例"
    },
    "combined_queries": {
      "description": "组合查询模式",
      "examples": [
        {
          "pattern": "issue_code:rushed_relationship AND country:IND",
          "use_case": "查找印度申请人关系仓促案例"
        },
        {
          "pattern": "issue_code:misrepresentation AND outcome:dismissed",
          "use_case": "查找因虚假陈述被驳回的案例"
        }
      ]
    }
  },
  "mcp_tool_mapping": {
    "kg_search": {
      "description": "通用案例搜索",
      "parameters": ["issue_code", "country_code", "outcome", "start_date", "end_date", "limit"]
    },
    "kg_case": {
      "description": "按引用获取单个案例",
      "parameters": ["citation"]
    },
    "kg_similar_cases": {
      "description": "查找相似案例",
      "parameters": ["country", "issue_codes", "age_range", "education_level", "funds_min", "funds_max", "limit"]
    },
    "kg_judge_stats": {
      "description": "获取法官统计",
      "parameters": ["judge_id"]
    }
  },
  "common_issue_codes": {
    "genuineness": [
      "rushed_relationship",
      "cohabitation_evidence",
      "immigration_purpose",
      "lack_knowledge",
      "illogical_behavior"
    ],
    "misrepresentation": [
      "concealed_marriage",
      "concealed_children",
      "concealed_criminal",
      "false_documents"
    ],
    "credibility": [
      "testimony_contradiction",
      "timeline_inconsistency",
      "vague_testimony"
    ],
    "procedural": [
      "procedural_fairness",
      "inadequate_reasons"
    ]
  }
}
