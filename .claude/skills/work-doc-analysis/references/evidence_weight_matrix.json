              "weight": 80,
              "required": true
            },
            {
              "id": "education_assessment",
              "name": "Education Credential Assessment",
              "name_zh": "学历认证",
              "grade": "B",
              "weight": 70,
              "required": false,
              "recommended": true
            },
            {
              "id": "professional_license",
              "name": "Professional License/Certificate",
              "name_zh": "专业执照/证书",
              "grade": "B",
              "weight": 60,
              "required": "if_applicable"
            }
          ]
        },
        "experience": {
          "description": "工作经验证明",
          "minimum_score": 60,
          "items": [
            {
              "id": "reference_letter",
              "name": "Employment Reference Letter",
              "name_zh": "雇主推荐信",
              "grade": "C",
              "weight": 70,
              "required": true,
              "must_include": ["company_letterhead", "dates", "position", "duties", "salary", "signature"]
            },
            {
              "id": "pay_stubs",
              "name": "Pay Stubs",
              "name_zh": "工资单",
              "grade": "B",
              "weight": 60,
              "required": false,
              "recommended": true,
              "minimum_months": 12
