{
  "version": "1.0.0",
  "description": "Work permit evidence weight matrix by category",
  "last_updated": "2026-01-28",
  "grade_definitions": {
    "A": {
      "label": "最高",
      "description": "政府签发、难以伪造、直接证明资格",
      "weight_multiplier": 1.0
    },
    "B": {
      "label": "高",
      "description": "官方机构签发、有日期戳、可验证",
      "weight_multiplier": 0.8
    },
    "C": {
      "label": "中",
      "description": "第三方文件、有日期、可追溯",
      "weight_multiplier": 0.5
    },
    "D": {
      "label": "低",
      "description": "自制文件、难以验证",
      "weight_multiplier": 0.3
    }
  },
  "categories": {
    "lmia": {
      "name": "LMIA Work Permit",
      "code": "LMIA",
      "evidence_requirements": {
        "core": {
          "description": "核心证据 (必需)",
          "minimum_score": 100,
          "items": [
            {
              "id": "lmia_approval",
              "name": "LMIA Approval Letter",
              "name_zh": "LMIA批准信",
              "grade": "A",
              "weight": 100,
              "required": true,
              "verification": "LMIA number verification"
            },
            {
              "id": "employer_offer",
              "name": "Employer Offer Letter",
              "name_zh": "雇主Offer Letter",
              "grade": "B",
              "weight": 90,
              "required": true,
              "must_include": ["position", "salary", "location", "start_date"]
            },
            {
              "id": "passport",
              "name": "Valid Passport",
              "name_zh": "有效护照",
              "grade": "A",
              "weight": 100,
              "required": true
            }
          ]
        },
        "qualification": {
          "description": "资格证明",
          "minimum_score": 70,
          "items": [
            {
              "id": "education_certificate",
              "name": "Education Certificate",
              "name_zh": "学历证明",
