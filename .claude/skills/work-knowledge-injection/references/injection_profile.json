{
  "version": "work-v3",
  "description": "Work permit knowledge injection profile with output constraints and category-specific routing",
  "skills": {
    "work-audit-rules": {
      "description": "Risk patterns, eligibility rules, category-specific deep dives",
      "inject_to": ["detective", "strategist", "gatekeeper"],
      "priority": 1,
      "files": [
        "risk_badges.json",
        "verified_risk_patterns.json",
        "hard_eligibility.md",
        "fraud_risk_flags.md",
        "refusal_patterns.md",
        "policy_updates.md",
        "risk_evidence_mapping.json",
        "provincial_differences.md"
      ],
      "category_files": {
        "PGWP": ["PGWP.md", "pgwp_deep.md"],
        "LMIA": ["LMIA.md"],
        "IMP": ["IMP.md", "religious-worker-imp.md", "religious-worker-r205d.md"],
        "ICT": ["ICT.md", "ict_deep.md"],
        "OPEN_WORK_PERMIT": ["open-work-permit.md", "open-spouse.md", "open_spouse_deep.md"],
        "PNP": ["PNP-work-permit.md", "pnp_deep.md"]
      }
    },
    "work-doc-analysis": {
      "description": "Document analysis rules and evidence standards",
      "inject_to": ["detective", "strategist"],
      "priority": 2,
      "files": [
        "document_types.md",
        "document_requirements_base.md",
        "category_specific_requirements.md",
        "extraction_schema.json",
        "validation_rules.md",
        "evidence_standards.md",
        "evidence_weight_matrix.json",
        "evidence_sufficiency.md"
      ]
    },
    "work-immicore-mcp": {
      "description": "Caselaw and operation manual query patterns",
      "inject_to": ["detective"],
      "priority": 3,
      "files": [
        "caselaw_query_patterns.json",
        "search_strategies.md",
        "category_specific_search_strategies.md",
        "issue_codes.md",
        "relevant_policy_codes.md"
      ]
    },
    "work-workflow": {
      "description": "Internal workflow templates (NOT output format)",
      "inject_to": ["strategist", "gatekeeper"],
      "priority": 4,
      "files": [
        "primary_assessment.md",
        "deep_analysis.md",
        "final_review.md",
        "submission_letter.md"
      ]
    },
    "work-client-guidance": {
      "description": "Client-facing guides for document preparation",
      "inject_to": ["gatekeeper"],
      "priority": 5,
      "files": [
        "document_checklist.md",
        "document_checklist_cn.md",
        "interview_prep_cn.md",
        "personal_statement_cn.md",
        "religious-worker-guidance.md",
        "spouse-permit-guidance.md"
      ]
    },
    "learned-guardrails": {
      "description": "Semantic verification rules to catch concept confusion errors",
      "inject_to": ["gatekeeper"],
      "priority": 6,
      "files": [
        "semantic_verification_guide.md"
      ]
    },
    "audit-report-output": {
      "description": "Final report format, Poison Pill templates, tier-based output constraints",
      "inject_to": ["reporter"],
      "priority": 7,
      "files": [
        "client_report_template.md"
      ]
    },
    "core-reporter": {
      "description": "Cross-app Reporter rules for synthesis, constraints, and document generation",
      "inject_to": ["reporter"],
      "priority": 8,
      "files": [
        "synthesis_rules.md",
        "output_constraints.md",
        "document_generation.md"
      ]
    },
    "work-reporter": {
      "description": "Work permit-specific Reporter templates for executive summary, document list, submission letter",
      "inject_to": ["reporter"],
      "priority": 9,
      "files": [
        "executive_summary.md",
        "document_list.md",
        "submission_letter.md"
      ]
    }
  },
  "injection_order": [
    "work-audit-rules",
    "work-doc-analysis",
    "work-immicore-mcp",
    "work-workflow",
    "work-client-guidance",
    "learned-guardrails",
    "audit-report-output",
    "core-reporter",
    "work-reporter"
  ],
  "category_detection": {
    "enabled": true,
    "detection_rules": {
      "PGWP": "Has study permit + graduation certificate + DLI institution",
      "LMIA": "Has Labour Market Opinion (LMIA) document from ESDC",
      "IMP": "Has IMP authorization letter (not LMIA, not provincial)",
      "ICT": "Has intra-company transfer documentation + corporate structure",
      "OPEN_WORK_PERMIT": "Has spouse/refugee/caregiver qualification",
      "PNP": "Has provincial nomination letter from authorized PNP program"
    },
    "detection_priority": ["PNP", "PGWP", "ICT", "IMP", "LMIA", "OPEN_WORK_PERMIT"]
  },
  "agent_skill_mapping": {
    "detective": {
      "skills": ["work-immicore-mcp", "work-audit-rules", "work-doc-analysis"],
      "prompt_file": "detective_prompt.md",
      "focus": "case_law_search"
    },
    "strategist": {
      "skills": ["work-audit-rules", "work-doc-analysis", "work-workflow"],
      "prompt_file": "strategist_prompt.md",
      "focus": "risk_assessment"
    },
    "gatekeeper": {
      "skills": ["work-audit-rules", "work-workflow", "work-client-guidance", "learned-guardrails"],
      "prompt_file": "gatekeeper_prompt.md",
      "focus": "compliance_check"
    },
    "reporter": {
      "skills": ["work-reporter", "core-reporter", "audit-report-output"],
      "prompt_file": "reporter_prompt.md",
      "focus": "report_synthesis"
    }
  },
  "tags": {
    "skill": "Skill_References",
    "risk": "Risk_Patterns",
    "doc": "Document_Analysis",
    "caselaw": "Caselaw_Patterns",
    "template": "Output_Templates",
    "guidance": "Client_Guidance"
  },
  "stability": {
    "allow_rename": false,
    "preserve_manifest": true
  },
  "_metadata": {
    "created": "2026-01-27",
    "last_updated": "2026-01-28",
    "status": "active",
    "version_notes": "v3.0: Aligned with spousal injection profile format, added all new Phase 5 files"
  }
}
