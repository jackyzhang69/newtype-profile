{
  "version": "3.0",
  "description": "学习许可判例法查询模式，支持 ImmiCore Caselaw Search v3.0 API",
  "api_version": "v3.0",
  "api_endpoint": "POST /api/v1/caselaw/search",
  "_landmark_cases_policy": {
    "description": "Landmark cases 管理策略",
    "policy": "仅列出经 KG 验证的 FC/FCA/SCC 权威案例，IAD/IRB 案例由 Detective 动态获取",
    "verification_method": "caselaw_authority(citation) - 确认 is_good_law=true",
    "update_frequency": "每季度使用 kg_top_authorities(issue_code='SUB_STUDY_PLAN') 检查更新",
    "last_verified": "2026-01-25",
    "design_principles_ref": "../../../os-design-principles.md"
  },
  "study_specific_queries": {
    "genuine_intent_cases": {
      "description": "真实学习意图相关判例",
      "queries": [
        {
          "id": "study_plan_reasonableness",
          "label": "学习计划合理性",
          "kg_search": {
            "issue_code": "SUB_STUDY_PLAN",
            "limit": 10
          },
          "keywords": ["study plan", "genuine intent", "purpose of study", "academic progression"],
          "landmark_cases": [
            "Gill v Canada (Citizenship and Immigration), 2008 FC 365",
            "Siddique v Canada (Citizenship and Immigration), 2022 FC 964"
          ],
          "_authority_verified": {
            "2008 FC 365": {"cited_by": 1, "is_good_law": true, "citing_case": "2019 FC 1260", "note": "学习许可 genuine intent 标准"},
            "2022 FC 964": {"cited_by": 1, "is_good_law": true, "citing_case": "2024 FC 433", "note": "学习计划合理性评估"}
          },
          "_dynamic_lookup": "kg_top_authorities(issue_code='SUB_STUDY_PLAN', court='FC', limit=5)"
        },
        {
          "id": "career_relevance",
          "label": "学习与职业发展相关性",
          "kg_search": {
            "issue_code": "SUB_STUDY_PLAN",
            "limit": 10
          },
          "keywords": ["career progression", "employment prospects", "relevance to career", "professional development"],
          "landmark_cases": [
            "Vehniwal v Canada (Minister of Citizenship & Immigration), 2007 FC 279"
          ],
          "_authority_verified": {
            "2007 FC 279": {"cited_by": 2, "is_good_law": true, "citing_cases": ["2020 CanLII 50509 (CA IRB)", "2019 FC 1422"]}
          },
          "_dynamic_lookup": "caselaw_optimized_search(query='study permit career relevance progression', court='fc', target_count=5)"
        },
        {
          "id": "temporary_vs_permanent",
          "label": "临时居留 vs 永久居留意图",
          "kg_search": {
            "issue_code": "SUB_PURPOSE",
            "limit": 10
          },
          "keywords": ["temporary resident", "permanent residence", "dual intent", "return home"],
          "landmark_cases": [],
          "_note": "Detective 应使用 MCP 动态获取最新案例",
          "_dynamic_lookup": "caselaw_optimized_search(query='study permit temporary resident dual intent', court='fc', target_count=5)"
        }
      ]
    },
    "financial_capacity_cases": {
      "description": "财务能力相关判例",
      "queries": [
        {
          "id": "funds_sufficiency",
          "label": "资金充足性",
          "kg_search": {
            "issue_code": "SUB_FUNDS",
            "limit": 10
          },
          "keywords": ["financial capacity", "sufficient funds", "tuition fees", "living expenses"],
          "landmark_cases": [],
          "_note": "SUB_FUNDS 案例多为近期案例，cited_by=0，由 Detective 动态获取",
          "_dynamic_lookup": "kg_top_authorities(issue_code='SUB_FUNDS', court='FC', limit=5)"
        },
        {
          "id": "funds_source",
          "label": "资金来源证明",
          "kg_search": {
            "issue_code": "SUB_FUNDS",
            "limit": 10
          },
          "keywords": ["source of funds", "bank statements", "sponsor letter", "financial support"],
          "landmark_cases": [],
          "_dynamic_lookup": "caselaw_optimized_search(query='study permit funds source bank statements', court='fc', target_count=5)"
        }
      ]
    },
    "ties_to_home_cases": {
      "description": "与母国联系相关判例",
      "queries": [
        {
          "id": "family_ties",
          "label": "家庭联系",
          "kg_search": {
            "issue_code": "SUB_TIES_HOME",
            "limit": 10
          },
          "keywords": ["family ties", "dependents", "parents", "spouse in home country"],
          "landmark_cases": [],
          "_note": "Detective 应使用 MCP 动态获取最新案例",
          "_dynamic_lookup": "kg_top_authorities(issue_code='SUB_TIES_HOME', court='FC', limit=5)"
        },
        {
          "id": "employment_ties",
          "label": "工作联系",
          "kg_search": {
            "issue_code": "SUB_TIES_HOME",
            "limit": 10
          },
          "keywords": ["employment ties", "job offer", "business ownership", "career in home country"],
          "landmark_cases": [],
          "_dynamic_lookup": "caselaw_optimized_search(query='study permit employment ties home country', court='fc', target_count=5)"
        },
        {
          "id": "property_ties",
          "label": "财产联系",
          "kg_search": {
            "issue_code": "SUB_TIES_HOME",
            "limit": 10
          },
          "keywords": ["property ownership", "assets", "real estate", "investments in home country"],
          "landmark_cases": [],
          "_dynamic_lookup": "caselaw_optimized_search(query='study permit property assets home country', court='fc', target_count=5)"
        }
      ]
    },
    "misrepresentation_cases": {
      "description": "虚假陈述相关判例",
      "queries": [
        {
          "id": "false_documents",
          "label": "虚假文件",
          "kg_search": {
            "issue_code": "SUB_MISREP_S40",
            "limit": 10
          },
          "keywords": ["forged documents", "fraudulent transcripts", "fake letter of acceptance"],
          "landmark_cases": [],
          "_note": "Detective 应使用 MCP 动态获取最新案例",
          "_dynamic_lookup": "caselaw_optimized_search(query='study permit forged documents misrepresentation', court='fc', target_count=5)"
        },
        {
          "id": "material_misrepresentation",
          "label": "重大虚假陈述",
          "kg_search": {
            "issue_code": "SUB_MISREP_S40",
            "limit": 10
          },
          "keywords": ["material misrepresentation", "section 40", "IRPA 40(1)", "five year bar"],
          "landmark_cases": [],
          "_dynamic_lookup": "kg_top_authorities(issue_code='SUB_MISREP_S40', court='FC', limit=5)"
        }
      ]
    }
  },
  "procedural_queries": {
    "description": "程序性问题查询",
    "queries": [
      {
        "id": "procedural_fairness",
        "label": "程序公平性",
        "kg_search": {
          "issue_code": "PF_OPPORTUNITY_RESPOND",
          "limit": 5
        },
        "keywords": ["procedural fairness", "duty to disclose", "opportunity to respond"],
        "landmark_cases": [
          "Baker v Canada (Minister of Citizenship and Immigration), [1999] 2 SCR 817"
        ],
        "_authority_verified": {
          "Baker [1999] 2 SCR 817": {"cited_by": 154, "is_good_law": true, "note": "程序公平性里程碑案例"}
        }
      },
      {
        "id": "reasonableness_standard",
        "label": "合理性审查标准",
        "kg_search": {
          "issue_code": "STD_REASONABLENESS",
          "limit": 5
        },
        "keywords": ["reasonableness", "standard of review", "Vavilov", "transparent justification"],
        "landmark_cases": [
          "Canada (Minister of Citizenship and Immigration) v Vavilov, 2019 SCC 65"
        ],
        "_authority_verified": {
          "Vavilov 2019 SCC 65": {"cited_by": 1, "is_good_law": true, "note": "SCC 标准审查标准里程碑 (KG 引用计数可能偏低)"}
        }
      }
    ]
  },
  "country_specific_queries": {
    "description": "按国家查询 - 使用 MCP 动态获取",
    "high_volume_countries": [
      {
        "country_code": "IND",
        "country_name": "India",
        "common_issues": ["genuine_intent", "funds_source", "career_relevance"],
        "_dynamic_lookup": "kg_similar_cases(country='IND', issue_codes=['SUB_STUDY_PLAN'], limit=5)"
      },
      {
        "country_code": "CHN",
        "country_name": "China",
        "common_issues": ["funds_sufficiency", "career_relevance", "ties_to_home"],
        "_dynamic_lookup": "kg_similar_cases(country='CHN', issue_codes=['SUB_FUNDS'], limit=5)"
      },
      {
        "country_code": "NGA",
        "country_name": "Nigeria",
        "common_issues": ["funds_source", "genuine_intent", "study_plan"],
        "_dynamic_lookup": "kg_similar_cases(country='NGA', issue_codes=['SUB_STUDY_PLAN'], limit=5)"
      },
      {
        "country_code": "PAK",
        "country_name": "Pakistan",
        "common_issues": ["genuine_intent", "ties_to_home", "career_relevance"],
        "_dynamic_lookup": "kg_similar_cases(country='PAK', issue_codes=['SUB_TIES_HOME'], limit=5)"
      }
    ]
  },
  "mcp_integration": {
    "tools": {
      "immicore_caselaw_search": {
        "description": "v3.0 统一搜索端点 - RRF 融合 BM25 + Semantic 搜索",
        "endpoint": "POST /api/v1/caselaw/search",
        "parameters": {
          "query": "搜索查询 (必填)",
          "court": "法院过滤: fc/fca/irb",
          "start_date": "判决日期起始 YYYY-MM-DD",
          "end_date": "判决日期结束",
          "must_include": "必须包含的关键词数组",
          "must_not": "排除的关键词数组",
          "top_k": "返回结果数 (默认 10)",
          "fetch_k": "候选池大小 (默认 20)",
          "include_text": "是否返回案例全文 (默认 false)",
          "enhance_with_kg": "是否添加 KG 有效性/权威性信息 (默认 false)",
          "rerank_by_authority": "是否按权威性重排序 (默认 false)",
          "authority_weight": "权威性权重 0-1 (默认 0.3)"
        }
      },
      "kg_top_authorities": {
        "description": "获取指定 issue_code 的最高权威案例",
        "usage": "kg_top_authorities(issue_code='SUB_STUDY_PLAN', court='FC', limit=10)",
        "note": "用于动态更新 landmark_cases，每季度执行一次"
      },
      "caselaw_authority": {
        "description": "验证单个案例的权威性",
        "usage": "caselaw_authority(citation='2008 FC 365')",
        "note": "返回 cited_by_count, is_good_law, top_citing_cases"
      },
      "kg_similar_cases": {
        "description": "查找相似案例",
        "usage": "kg_similar_cases(country='IND', issue_codes=['SUB_STUDY_PLAN'], limit=5)"
      }
    },
    "search_strategy": {
      "description": "搜索策略建议",
      "for_risk_assessment": {
        "approach": "使用 enhance_with_kg=true 获取案例有效性",
        "reason": "确保引用的案例未被推翻 (overruled)",
        "example": "immicore_caselaw_search(query='study permit genuine intent', enhance_with_kg=true, must_include=['study plan'])"
      },
      "for_defense_strategy": {
        "approach": "使用 rerank_by_authority=true 优先获取权威案例",
        "reason": "权威案例更有说服力",
        "example": "immicore_caselaw_search(query='study permit approved reasonableness', rerank_by_authority=true, authority_weight=0.5)"
      }
    },
    "operation_manual_queries": {
      "description": "操作手册查询",
      "relevant_sections": [
        "OP 12 - Students",
        "IP 2 - Study Permits",
        "ENF 2 - Evaluating Inadmissibility"
      ]
    }
  },
  "query_templates": {
    "risk_assessment": {
      "description": "风险评估时查询模板",
      "v3_template": "immicore_caselaw_search(query='{risk_description}', enhance_with_kg=true, must_include=['{risk_pattern_id}'])",
      "kg_template": "kg_top_authorities(issue_code='SUB_STUDY_PLAN', limit=5)",
      "note": "v3 API 可检查案例有效性，避免引用已被推翻的案例"
    },
    "defense_strategy": {
      "description": "制定辩护策略时查询成功案例",
      "v3_template": "immicore_caselaw_search(query='{defense_argument}', rerank_by_authority=true, authority_weight=0.5)",
      "kg_template": "kg_search(issue_code='{risk_pattern_id}', outcome='allowed', limit=5)",
      "note": "v3 API 可按权威性排序，优先返回高引用案例"
    },
    "validity_check": {
      "description": "检查案例是否仍为有效法律",
      "v3_template": "caselaw_authority(citation='{case_citation}')",
      "note": "检查 is_good_law 字段确认案例未被推翻"
    }
  }
}
